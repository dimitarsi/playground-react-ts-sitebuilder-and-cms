{
  "name": "web-builder-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "esbuild ./src/server.ts --platform=node --outdir=./dist/server --format=cjs --sourcemap --source-root=../src --bundle --external:esbuild",
    "build:web": "esbuild ./src/client/client.tsx ./src/client/browser.ts --outdir=./dist/client --format=cjs --sourcemap --source-root=../src --bundle --minify",
    "build:components": "esbuild ./src/components/*.tsx --outdir=./dist/browser --format=cjs --sourcemap --source-root=./src --bundle --external:react --external:react-dom",
    "build:all": "yarn build && yarn build:web && yarn build:components",
    "start": "node ./dist/index.js",
    "build:web-builder": "esbuild ./src/modules/webBuilder/app/index.tsx --outdir=./dist/web-builder --format=cjs --sourcemap --source-root=../src --bundle --minify",
    "serve:web-builder": "esbuild ./src/modules/webBuilder/components/App.tsx --outfile=app.js --bundle --serve=5555"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.4.7",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "esbuild": "^0.14.48",
    "nodemon": "^2.0.19",
    "typescript": "^4.7.4"
  }
}
